<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>DISPLAY</title>
    <style>
        body {
            width: 98%;
        }

        table, th, td {
            margin: 30px;
        }

        table {
            border-collapse: collapse;
            width: 95%;
        }

        th {
            height: 80px;
            font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
            width: 9%;
        }

        td {
            height: 50px;
            font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
            text-align: center;
            width: 8%;
        }

        tr:nth-child(even) {
            background-color: #CADADD;
        }
    </style>
  </head>
  <body>
      <table>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>weight</th>
            <th>height</th>
            <th>fly</th>
            <th>fight</th>
            <th>fire</th>
            <th>water</th>
            <th>electric</th>
            <th>frozen</th>
            <th>total</th>
            <th>trainner name</th>
        </tr>
        <% results.forEach(function(r) { %>
            <tr>
                <td><%= r.id %></td>
                <td><%= r.name %></td>
                <td><%= r.weight %></td>
                <td><%= r.height %></td>
                <td><%= r.fly %></td>
                <td><%= r.fight %></td>
                <td><%= r.fire %></td>
                <td><%= r.water %></td>
                <td><%= r.electric %></td>
                <td><%= r.frozen %></td>
                <td><%= r.total %></td>
                <td><%= r.trainer %></td>
            </tr>
        <% }); %>
      </table>
  </body>
</html>
